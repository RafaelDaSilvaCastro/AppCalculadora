<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200sp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="80sp"
        android:textDirection="rtl"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linha1"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/_1"
            android:textSize="48sp"
            android:id="@+id/btn1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/_2"
            android:textSize="48sp"
            android:id="@+id/btn2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/_3"
            android:textSize="48sp"
            android:id="@+id/btn3"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/somar"
            android:textSize="48sp"
            android:id="@+id/btnSomar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linha2"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/_4"
            android:textSize="48sp"
            android:id="@+id/btn4"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/_5"
            android:textSize="48sp"
            android:id="@+id/btn5"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/_6"
            android:textSize="48sp"
            android:id="@+id/btn6"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/subtracao"
            android:textSize="48sp"
            android:id="@+id/btnSubt"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linha3"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/_7"
            android:textSize="48sp"
            android:id="@+id/btn7"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/_8"
            android:textSize="48sp"
            android:id="@+id/btn8"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/_9"
            android:textSize="48sp"
            android:id="@+id/btn9"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="*"
            android:textSize="48sp"
            android:id="@+id/btnMult"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linha4"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="@string/c"
            android:textSize="48sp"
            android:id="@+id/btnLimpar"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="0"
            android:textSize="48sp"
            android:id="@+id/btn0"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="="
            android:textSize="48sp"
            android:id="@+id/btnResultado"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/material_emphasis_disabled_background"
            android:text="/"
            android:textSize="48sp"
            android:id="@+id/btnDivisao"/>
    </LinearLayout>

</LinearLayout>